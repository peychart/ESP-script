//////////////////////////////////////////////////////////////////////////////
//Setup:
//SETGPIO(pinNumber,pinMode [,pinName [,pinAssociatedValue(ex.:timeOnDelay)] ]
SETGPIO(2, OUTPUT_DOWN, blueLED, 1000);		//D4 (on Wemos D1 mini)
//////////////////////////////////////////////////////////////////////////////
//GPIO(2) treatment:
if GPIO(2)		then  timer(Off, 2500);
if timer(Off)		then !GPIO(2) + clearTimer(Off) + timer(On, $GPIO(2));
if timer(On)		then  GPIO(2) + clearTimer(On);
//////////////////////////////////////////////////////////////////////////////

